---
import ProgressCounter from "./ProgressCounter.astro";
import { frontmatter, compiledContent } from "../pages/homepage/01-hero.md";
---

<section>
  <div class="container">
    <div class="grid">
      <div>
        <h1>No more <br /> fast fashion</h1>
        <p>{frontmatter.body}</p>
        <div class="content" set:html={compiledContent()}></div>
        <div class="links">
          <a href="#why">Why?</a>
          <a href="#how">How?</a>
        </div>
      </div>
      <ProgressCounter />
    </div>
  </div>
</section>

<style>
  section {
    background: var(--accent1);
    color: white;
  }

  .grid {
    display: grid;
    gap: var(--space-m);
  }

  @media (min-width: 800px) {
    .grid {
      display: grid;
      grid-template-columns: 3fr 1fr;
    }
  }

  h1 {
    max-width: 16ch;
    line-height: 0.8;
    font-size: var(--step-6);
    letter-spacing: -0.03em;
  }

  p {
    font-size: var(--step-2);
    letter-spacing: -0.02em;
    margin-bottom: var(--space-s);
  }

  .content {
    font-size: var(--step-1);
  }

  .links {
    font-family: var(--heading);
    font-size: var(--step-1);
    margin-top: var(--space-m);
    display: grid;
    gap: var(--space-s);
    grid-template-columns: repeat(2, max-content);
  }

  a {
    display: block;
    padding: 0.5rem var(--space-l);
    border-radius: 0.8rem;
    text-decoration: none;
    background: black;
    color: white;
    border: 0.1rem solid transparent;
  }

  a:nth-child(2) {
    background: var(--bg);
    color: black;
  }

  a:hover,
  a:focus {
    background: var(--accent1-dark);
    color: white;
    border: 0.1rem solid;
  }
</style>
